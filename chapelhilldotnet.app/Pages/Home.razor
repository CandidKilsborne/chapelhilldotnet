@page "/"

<div class="flex flex-col min-h-screen dark:bg-gray-900 dark:text-white">
    <header class="bg-white dark:bg-gray-800 shadow-sm">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <path d="M22 4L12 14.01l-3-3"></path>
                </svg>
                <span class="text-xl font-bold text-gray-800 dark:text-white"
                      tabindex="1">Chapel Hill .NET</span>
            </div>
            <nav class="hidden md:flex space-x-4">
                <a href="#about" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">About</a>
                <a href="#events" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Events</a>
                <a href="#organizers"
                   class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Organizers</a>
                @* <a href="#contact" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Contact</a> *@
            </nav>
            @* <div class="flex items-center space-x-2"> *@
            @*     <DarkModeToggle /> *@
            @*     <button class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white px-4 py-2 rounded-md">Join Us</button> *@
            @* </div> *@
        </div>
    </header>

    <main class="flex-grow">
        <section class="bg-gradient-to-r from-orange-600 to-purple-600 text-white py-20">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Connect, Learn, and Grow with .NET &
                    Azure</h1>
                <p class="text-xl mb-8">Join our vibrant community of developers in Chapel Hill, NC</p>
                @* <button *@
                @*     class="bg-white text-blue-600 hover:bg-gray-100 hover:text-blue-700 text-lg py-2 px-6 rounded-md"> *@
                @*     Attend Next Meetup *@
                @* </button> *@
            </div>
        </section>

        <section id="about" class="py-16 bg-gray-50 dark:bg-gray-800">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8">What We're About</h2>
                <div class="grid md:grid-cols-2 gap-8">

                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Dotnetcore" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">.NET Development</h3>
                            <p class="item-description">Explore the latest in .NET development, from C# features to
                                ASP.NET
                                Core best practices.</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <Blazicon Svg="DeviconOriginal.Azure" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">Azure Cloud</h3>
                            <p class="item-description">Dive into Azure services, cloud architecture, and DevOps
                                practices
                                for scalable applications.</p>
                        </div>
                    </div>

                    <!-- IoT -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Raspberrypi" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">Internet of Things (IoT)</h3>
                            <p class="item-description">Discover how IoT connects devices and builds smart systems for
                                innovative solutions.</p>
                        </div>
                    </div>

                    <!-- Blazor -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Blazor" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">Blazor Development</h3>
                            <p class="item-description">Build interactive web UIs using C# instead of JavaScript with
                                Blazor.</p>
                        </div>
                    </div>

                    <!-- C# -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Csharp" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">C# Development</h3>
                            <p class="item-description">Learn advanced C# techniques, design patterns, and best
                                practices
                                for building robust applications.</p>
                        </div>
                    </div>

                    <!-- PowerShell -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Powershell" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">PowerShell</h3>
                            <p class="item-description">Leverage PowerShell for task automation, system management, and
                                scripting solutions.</p>
                        </div>
                    </div>

                    <!-- Python -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Python" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">Python Development</h3>
                            <p class="item-description">Master Python for scripting, web development, data analytics,
                                and
                                beyond.</p>
                        </div>
                    </div>

                    <!-- Machine Learning -->
                    <div class="flex items-center space-x-6">
                        <Blazicon Svg="DeviconOriginal.Pytorch" class="w-half"/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">Machine Learning</h3>
                            <p class="item-description">Dive into ML algorithms to build predictive models and
                                intelligent
                                applications.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="events" class="py-16">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8">Upcoming Events</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var evt in @Events)
                    {
                        <EventCard Event="@evt"/>
                    }
                </div>
            </div>
        </section>

        <section id="organizers" class="py-16 bg-gray-50 dark:bg-gray-800">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8 dark:text-white">Meet Our Organizers</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var organizer in @Organizers)
                    {
                        <OrganizerCard Organizer="@organizer"/>
                    }
                </div>
            </div>
        </section>

        <section class="sponsors-section">
            <div class="container">
                <header class="sponsors-header">
                    <h2 class="sponsors-title">Our Sponsors</h2>
                    <p class="sponsors-description">
                        We are grateful for the support of our amazing sponsors who make our events possible.
                    </p>
                </header>

                <div class="sponsors-grid">
                    <div class="sponsor-card bg-gray-100 dark:bg-gray-800 rounded-lg p-6">
                        <div class="sponsor-content">
                            <div class="sponsor-info">
                                <img src="images/sponsors/artificial_pixel_logo.svg" alt="Artificial Pixel, LLC Logo"
                                     class="sponsor-logo">
                                <h3 class="sponsor-name">Artificial Pixel, LLC</h3>
                            </div>
                            <a href="https://artificialpixel.com" target="_blank" rel="noopener noreferrer"
                               class="sponsor-link">Visit Website</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

@code {
    private List<Event> Events { get; set; } = [];
    private List<Organizer> Organizers { get; set; } = [];

    protected override void OnInitialized()
    {
        Events = EventsList.Events;

        Organizers = OrganizersList.Organizers;
    }

}