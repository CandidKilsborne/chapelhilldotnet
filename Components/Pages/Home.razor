            @*     <a href="#about" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">About</a> *@
            @*     <a href="#events" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Events</a> *@
            @*     <a href="#organizers" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Organizers</a> *@
            @*     <a href="#contact" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Contact</a> *@
            @* </nav> *@
            @* <div class="flex items-center space-x-2"> *@
            @*     <DarkModeToggle /> *@
            @*     <button class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white px-4 py-2 rounded-md">Join Us</button> *@
            @* </div> *@
        </div>
    </header>

    <main class="flex-grow">
        <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Connect, Learn, and Grow with .NET & Azure</h1>
                <p class="text-xl mb-8">Join our vibrant community of developers in Chapel Hill, NC</p>
                <button
                    class="bg-white text-blue-600 hover:bg-gray-100 hover:text-blue-700 text-lg py-2 px-6 rounded-md">
                    Attend Next Meetup
                </button>
            </div>
        </section>

        <section id="about" class="py-16 bg-gray-50 dark:bg-gray-800">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8">What We're About</h2>
                <div class="grid md:grid-cols-2 gap-8">

                    <div class="flex items-center space-x-6">
                        <Blazicon Svg='DeviconOriginal.Dotnetcore.WithSize("300%")'/>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold mb-2">.NET Development</h3>
                            <p class="text-gray-600">Explore the latest in .NET development, from C# features to ASP.NET
                                Core best practices.</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <Blazicon Svg='DeviconOriginal.Azure.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">Azure Cloud</h3>
                            <p class="text-gray-600">Dive into Azure services, cloud architecture, and DevOps practices
                                for scalable applications.</p>
                        </div>
                    </div>

                    <!-- IoT -->
                    <div class="flex items-center space-x-6">
                        <Blazicon class="h-12 w-12 text-green-600" Svg='DeviconOriginal.Raspberrypi.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">Internet of Things (IoT)</h3>
                            <p class="text-gray-600">Discover how IoT connects devices and builds smart systems for
                                innovative solutions.</p>
                        </div>
                    </div>

                    <!-- PowerShell -->
                    <div class="flex items-center space-x-6">
                        <Blazicon class="h-12 w-12 text-blue-700" Svg='DeviconOriginal.Powershell.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">PowerShell</h3>
                            <p class="text-gray-600">Leverage PowerShell for task automation, system management, and
                                scripting solutions.</p>
                        </div>
                    </div>

                    <!-- C# -->
                    <div class="flex items-center space-x-6">
                        <Blazicon class="h-12 w-12 text-purple-600" Svg='DeviconOriginal.Csharp.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">C# Development</h3>
                            <p class="text-gray-600">Learn advanced C# techniques, design patterns, and best practices
                                for building robust applications.</p>
                        </div>
                    </div>

                    <!-- Python -->
                    <div class="flex items-center space-x-6">
                        <Blazicon class="h-12 w-12 text-yellow-600" Svg='DeviconOriginal.Python.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">Python Development</h3>
                            <p class="text-gray-600">Master Python for scripting, web development, data analytics, and
                                beyond.</p>
                        </div>
                    </div>

                    <!-- Machine Learning -->
                    <div class="flex items-center space-x-6">
                        <Blazicon class="h-12 w-12 text-blue-500" Svg='DeviconOriginal.Pytorch.WithSize("300%")'/>
                        <div>
                            <h3 class="text-xl font-semibold mb-2">Machine Learning</h3>
                            <p class="text-gray-600">Dive into ML algorithms to build predictive models and intelligent
                                applications.</p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>

        <section id="events" class="py-16">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8">Upcoming Events</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var evt in Events)
                    {
                        <EventCard Event="@evt"/>
                    }
                </div>
            </div>
        </section>

        <section id="organizers" class="py-16 bg-gray-50 dark:bg-gray-800">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-8 dark:text-white">Meet Our Organizers</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    @foreach (var organizer in Organizers)
                    {
                        <OrganizerCard Organizer="@organizer"/>
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer></Footer>
</div>

