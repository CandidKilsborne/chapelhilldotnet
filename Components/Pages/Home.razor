@using ChapelHillDotNet.Components.Layout

<div class="flex flex-col min-h-screen dark:bg-gray-900 dark:text-white">
    <header class="bg-white dark:bg-gray-800 shadow-sm">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <path d="M22 4L12 14.01l-3-3"></path>
                </svg>
                <span class="text-xl font-bold text-gray-800 dark:text-white">Chapel Hill .NET & Azure</span>
            </div>
