@page "/"

<div class="flex flex-col min-h-screen bg-white text-gray-900 dark:bg-gray-900 dark:text-white">
    <header class="bg-white dark:bg-gray-800 shadow-md sticky top-0 z-50 transition-all duration-300" role="banner">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" aria-hidden="true" focusable="false">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <path d="M22 4L12 14.01l-3-3"></path>
                </svg>
                <span class="text-xl font-bold text-gray-800 dark:text-white">Chapel Hill .NET</span>
            </div>
            <nav class="hidden md:flex space-x-4" aria-label="Primary navigation">
                <a href="#about" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">About</a>
                <a href="#events" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">Events</a>
                <a href="#organizers"
                   class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">Organizers</a>
                @* <a href="#contact" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">Contact</a> *@
            </nav>
            <div class="flex items-center space-x-2">
                <DarkModeToggle />
                <button type="button"
                        class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-all duration-200 hover:shadow-lg hover:scale-105"
                        aria-label="Join Chapel Hill .NET community">Join Us</button>
            </div>
        </div>
    </header>

    <main class="flex-grow">
        <section class="bg-gradient-to-r from-orange-600 to-purple-600 text-white py-20" aria-label="Hero section">
            <div class="container mx-auto px-4 text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Connect, Learn, and Grow with .NET &
                    Azure</h1>
                <p class="text-xl mb-8">Join our vibrant community of developers in Chapel Hill, NC</p>
                @* <button *@
                @*     class="bg-white text-blue-600 hover:bg-gray-100 hover:text-blue-700 text-lg py-2 px-6 rounded-md"> *@
                @*     Attend Next Meetup *@
                @* </button> *@
            </div>
        </section>

        <section id="about" class="py-16 bg-gray-50 dark:bg-gray-800" aria-labelledby="about-heading">
            <div class="container mx-auto px-4">
                <h2 id="about-heading" class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">What We're About</h2>
                <div class="grid md:grid-cols-2 gap-4">

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Dotnetcore" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">.NET Development</h3>
                            <p class="item-description">Explore the latest in .NET development, from C# features to ASP.NET Core best practices.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Azure" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Azure Cloud</h3>
                            <p class="item-description">Dive into Azure services, cloud architecture, and DevOps practices for scalable applications.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Raspberrypi" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Internet of Things (IoT)</h3>
                            <p class="item-description">Discover how IoT connects devices and builds smart systems for innovative solutions.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Blazor" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Blazor Development</h3>
                            <p class="item-description">Build interactive web UIs using C# instead of JavaScript with Blazor.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Csharp" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">C# Development</h3>
                            <p class="item-description">Learn advanced C# techniques, design patterns, and best practices for building robust applications.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Powershell" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">PowerShell</h3>
                            <p class="item-description">Leverage PowerShell for task automation, system management, and scripting solutions.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Python" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Python Development</h3>
                            <p class="item-description">Master Python for scripting, web development, data analytics, and beyond.</p>
                        </div>
                    </div>

                    <div class="tech-feature-card">
                        <div class="tech-icon-wrapper">
                            <Blazicon Svg="DeviconOriginal.Pytorch" class="tech-icon"/>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Machine Learning</h3>
                            <p class="item-description">Dive into ML algorithms to build predictive models and intelligent applications.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="events" class="py-16 bg-white dark:bg-gray-900" aria-labelledby="events-heading">
            <div class="container mx-auto px-4">
                <h2 id="events-heading" class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">Upcoming Events</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var evt in @Events)
                    {
                        <EventCard Event="@evt"/>
                    }
                </div>
            </div>
        </section>

        <section id="organizers" class="py-16 bg-gray-50 dark:bg-gray-800" aria-labelledby="organizers-heading">
            <div class="container mx-auto px-4">
                <h2 id="organizers-heading" class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">Meet Our Organizers</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var organizer in @Organizers)
                    {
                        <OrganizerCard Organizer="@organizer"/>
                    }
                </div>
            </div>
        </section>

        <section class="sponsors-section bg-white dark:bg-gray-900" aria-labelledby="sponsors-heading">
            <div class="container">
                <header class="sponsors-header">
                    <h2 id="sponsors-heading" class="sponsors-title text-gray-900 dark:text-white">Our Sponsors</h2>
                    <p class="sponsors-description text-gray-600 dark:text-gray-400">
                        We are grateful for the support of our amazing sponsors who make our events possible.
                    </p>
                </header>

                <div class="sponsors-grid">
                    <div class="sponsor-card bg-white dark:bg-gray-700 rounded-lg p-6 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                        <div class="sponsor-content">
                            <div class="sponsor-info">
                                <img src="images/sponsors/artificial_pixel_logo.svg" alt="Artificial Pixel, LLC Logo"
                                     class="sponsor-logo">
                                <h3 class="sponsor-name dark:text-white">Artificial Pixel, LLC</h3>
                            </div>
                            <a href="https://artificialpixel.com" target="_blank" rel="noopener noreferrer"
                               class="sponsor-link transition-colors duration-200 hover:opacity-100">Visit Website</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    @* <Footer></Footer> *@
</div>

@code {
    private List<Event> Events { get; set; } = [];
    private List<Organizer> Organizers { get; set; } = [];

    protected override void OnInitialized()
    {
        Events = EventsList.Events;

        Organizers = OrganizersList.Organizers;
    }

}