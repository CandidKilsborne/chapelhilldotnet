<div class="bg-white dark:bg-gray-700 rounded-lg shadow-md p-6 text-center">
    <img src="@Organizer.ImageUrl" alt="@Organizer.Name" class="w-24 h-24 rounded-full mx-auto mb-4" />
    <h3 class="text-xl font-semibold mb-2 dark:text-white">@Organizer.Name</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">@Organizer.Bio</p>
    <div class="flex justify-center space-x-4">
        @if (!string.IsNullOrEmpty(Organizer.TwitterUrl))
        {
            <a href="@Organizer.TwitterUrl" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
                @* <TwitterIcon /> *@
            </a>
        }
        @if (!string.IsNullOrEmpty(Organizer.LinkedInUrl))
        {
            <a href="@Organizer.LinkedInUrl" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
                <Blazicon Svg="Lucide.Linkedin" />
            </a>
        }
        @if (!string.IsNullOrEmpty(Organizer.GitHubUrl))
        {
            <a href="@Organizer.GitHubUrl" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
                <Blazicon Svg="Lucide.Github" />
            </a>
        }
    </div>
</div>

@code {
    [Parameter]
    public Organizer Organizer { get; set; }
}